page{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0
}

.container{
  height: 100%;
  width: 100%;
}

.scroll{
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.item{
  height: 15%;
  width: 88%;
  background-color: #ffffff;
  border-radius: 20rpx;

  margin-left: 6%;
  margin-top: 4%;
  display: flex;
  flex-direction: row;
}

.photo{
  width: 30%;
  height: 100%;
  background-color: #7ad5f7;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.photo image{
  width: 100%;
  height: 100%;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.nophoto{
  width: 30%;
  height: 100%;
  background-color: #7ad5f7;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.nophoto image{
  width: 70%;
  height: 74%;

  margin-top: 12%;
  margin-left: 13%
}

.text{
  width: 55%;
  height: 100%;

  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.name{
  width: 80%;
  height: 30%;
  color: #303030;
  font-size: 36rpx;

  margin-left: 10%;
  margin-top: 10%;
}

.location{
  width: 80%;
  height: 25%;
  color: #959595;
  font-size: 30rpx;

  margin-top: 5%;
  margin-left: 10%;
}

.choose{
  width: 15%;
  height: 100%;
  background-color: #09b2f0;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;

  display: flex;
}

.choose image{
  width: 70%;
  height: 36%;

  margin-top: 50%;
  margin-left: 15%;
}