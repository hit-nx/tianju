<!--index.wxml-->
<view class='container'>

  <view class='photo'>
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="1000">
      <block wx:for="{{imgUrls}}" wx:key="key">
        <swiper-item class='swiperitem'>
          <image src="{{item}}" class="slide-image" width="355" height="150" />
        </swiper-item>
      </block>
    </swiper>
    <!-- <image src='../../images/photos/首页.jpg' /> -->
  </view>

  <view class='selection'>

    <view class='content'>

      <view class='item'>
        <image src='../../images/icon-png/活动流程.png' />
        <text class='four'>活动流程</text>
      </view>

      <view class='item'>
        <image src='../../images/icon-png/活动参与人.png' />
        <text class='five'>活动参与人</text>
      </view>

      <view class='item' bindtap='individualDemand'>
        <image src='../../images/icon-png/主页-个人需求.png' />
        <text class='four'>个人需求</text>
      </view>

    </view>

    <view class='content'>
      <view class='item'>
        <image src='../../images/icon-png/住宿.png' />
        <text class='two'>住宿</text>
      </view>

      <view class='item'>
        <image src='../../images/icon-png/用餐.png' />
        <text class='two'>用餐</text>
      </view>

      <view class='item' bindtap='souvenir'>
        <image src='../../images/icon-png/纪念品.png' />
        <text class='three'>纪念品</text>
      </view>

    </view>

    <view class='btn'>

      <view class='firstbtn'>
        <button> {{firstbtn}} </button>
      </view>

      <view class='secondbtn'>
        <button> {{secondbtn}} </button>
      </view>

    </view>
  </view>

  <button bindtap='noActivity'>无活动</button>
  <view class="modal-mask" wx:if="{{showModal}}"></view>
  <view class="modal-dialog" wx:if="{{showModal}}">
    <view class="modal-title">提示</view>
    <view class="modal-content">
      <text class='tips'>系统检测到您未加入或创建任何活动，</text>
      <text class='tips'>请选择加入一个活动或创建一个活动</text>
    </view>
    <view class="modal-footer">
      <view class="btn-cancel" bindtap="onCancel" data-status="cancel">加入一个活动</view>
      <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">创建一个活动</view>
    </view>
  </view>
</view>