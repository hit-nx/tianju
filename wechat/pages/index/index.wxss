page{
  height: 100%;
}

.container{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0;
}

.photo{
  height: 35%;
  width: 100%;
}

.selection{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.item{
  height: 160rpx;
  width: 27%;
  background-color: #ffffff;
  margin: 8px;

  display: flex;
   flex-direction: column;
  justify-content: center;
}

.item image{
  width: 35%;
  height: 45%;
  margin-left: 32%;
}

.item text{
  color: #303030;
  font-size: 10px;
  margin-top: 7%;
}

.two{
  margin-left: 37%;
}

.three{
  margin-left: 32%;
}

.four{
  margin-left: 27%;
}

.five{
  margin-left: 22%;
}

.btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around 
}

.firstbtn{
  width: 80%;
  height: 20%;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.firstbtn button{
  margin: 2%;

  width: 200%;
  height: 80rpx;
  color: #ffffff;
  font-size: 12px;
  background-color: #09b2f0;
}

.secondbtn{
  width: 95%;
  height: 20%;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.secondbtn button{
  margin: 5%;
  width: 80%;
  height: 80rpx;
  color: #ffffff;
  font-size: 12px;
  background-color: #f35a5a;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 580rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -215rpx 85rpx;
  border-radius: 20rpx;
  background-color: #e3e0e0;
}

.modal-title {
  padding: 15rpx 30rpx;
  font-size: 27rpx;
  color: #fff;
  background-color: #09b2f0;
}

.modal-content {
  height: 160rpx;
  padding: 50rpx 80rpx;
}

.tips{
    color: #303030;
    font-size: 25rpx;
    margin: 20rpx 0;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top: 1px solid #a5a5a5;
  font-size: 30rpx;
  line-height: 100rpx;
}

.btn-cancel {
  width: 50%;
  color: #959595;
  text-align: center;
  border-right: 1px solid #a5a5a5;
}

.btn-confirm {
  width: 50%;
  color: #09b2f0;
  text-align: center;
}
