/**index.wxss**/
.selection{
  height: 715rpx;
  background-color: #e3e0e0
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.item{
  height: 160rpx;
  width: 27%;
  background-color: #ffffff;
  margin: 8px;

  display: flex;
   flex-direction: column;
  justify-content: center;
}

.item image{
  width: 35%;
  height: 45%;
  margin-left: 32%;
}

.item text{
  color: #303030;
  font-size: 10px;
  margin-top: 7%;
}

.two{
  margin-left: 37%;
}

.three{
  margin-left: 32%;
}

.four{
  margin-left: 27%;
}

.five{
  margin-left: 22%;
}

.btn{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-around 
}

.firstbtn{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.firstbtn button{
  margin: 2%;

  width: 80%;
  height: 80rpx;
  color: #ffffff;
  font-size: 12px;
  background-color: #09b2f0;
}

.secondbtn{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around 
}

.secondbtn button{
  margin: 5%;

  width: 80%;
  height: 80rpx;
  color: #ffffff;
  font-size: 12px;
  background-color: #f35a5a;
}