 page{
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.container{
  width: 100%;
  height: 100%;
  overflow-y: scroll;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.title{
  width: 32%;
  height: 5%;
  background-color: #7ad5f7;
  margin-top: 4%;
  margin-left: 3%;
  border-radius: 30rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.title text{
  font-size: 30rpx;
  color: #fff;
}

.display{
  height: 250rpx;
  width: 750rpx;
  background-color: #e3e0e0;
  margin-top: 3%;
}

.item-activity{
  width: 90%;
  height: 200rpx;
  margin-left: 5%;
  margin-top: 25rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.date{
  height: 25%;
  width: 100%;
  background-color: #09b2f0;
  border-radius: 20rpx 20rpx 0 0;
}

.date-day{
  width: 25%;
  font-size: 25rpx;
  color: #fff;
  margin-left: 5%;
}

.date-time{
  font-size: 25rpx;
  color: #fff;
  margin-left: 22%;
}

.content{
  height: 75%;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.activity-name{
  font-size: 35rpx;
  color: #303030;
  margin-left: 10%;
}

.activity-location{
  font-size: 30rpx;
  color: #959595;
  margin-left: 10%;
}

.activity-else{
  font-size: 26rpx;
  color: #959595;
  margin-left: 10%;
}

.item-hotel{
  width: 90%;
  height: 200rpx;
  margin-left: 5%;
  margin-top: 50rpx;
  background-color: #fff;
  border-radius: 20rpx;

  display: flex;
  flex-wrap: nowrap;
}

.item-hotel image{
  width: 30%;
  height: 100%;
  border-radius: 20rpx 0 0 20rpx;
}

.hotel{
  width: 70%;
  height: 100%;
  border-radius: 0 20rpx 20rpx 0;

  display: flex;
  flex-direction: column;
}

.hotel-hotel{
  width: 100%;
  height: 25%;
  border-top-right-radius: 20rpx;
  background-color: #09b2f0;
}

.hotel-content{
  height: 75%;
  width: 100%;
  border-bottom-right-radius: 20rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}