<view class='container'>

  <scroll-view scroll-y='true' class='scroll'>

    <block>
      <view class='title'>
        <text>活动流程</text>
      </view>

      <view class='display'>
        <scroll-view scroll-y='true' class='scroll'>
          <block wx:for='{{activity}}'>
          <view class='item'>
            <view class='photo'>
              <image src='../../images/icon-png/活动.png' class='activity-image'/>
            </view>

            <view class='content'>
              <view class='date'>
                <text>{{item.day}}</text>
                <text>{{item.time}}</text>
              </view>

              <view class='introduce'>
                <text class='name'>{{item.name}}</text>
                <text class='location'>{{item.location}}</text>
                <text class='else'>{{item.Else}}</text>
              </view>
            </view>
          </view>
          </block>

        </scroll-view>
      </view>
    </block>

    <block>
      <view class='title'>
        <text>住宿</text>
      </view>

      <view class='display'>
        <view class='scroll'>

          <view class='item'>
            <view class='photo'>
              <image src='../../images/photos/酒店.jpg' class='hotel-image'/>
            </view>

            <view class='content'>
              <view class='date'>
                <text>住宿</text>
              </view>

              <view class='introduce'>
                <text class='name'>我是酒店名称</text>
                <text class='location'>我是酒店地点</text>
              </view>
            </view>
          </view>

        </view>
      </view>
    </block>

    <block>
      <view class='title'>
        <text>用餐</text>
      </view>

      <view class='display'>
        <scroll-view scroll-y='true' class='scroll'>
          <block wx:for='{{eat}}'>
          <view class='item'>
            <view class='photo'>
              <image src='../../images/photos/餐厅.jpg' class='hotel-image'/>
            </view>

            <view class='content'>
              <view class='date'>
                <text>{{item.day}}</text>
                <text>{{item.time}}</text>
              </view>

              <view class='introduce'>
                <text class='name'>{{item.name}}</text>
                <text class='location'>{{item.location}}</text>
              </view>
            </view>
          </view>
          </block>
        </scroll-view>
      </view>
    </block>

    <block>
      <view class='title'>
        <text>纪念品</text>
      </view>

      <view class='display'>
        <scroll-view scroll-y='true' class='scroll'>
          <block wx:for='{{souvenir}}'>
          <view class='item'>
            <view class='photo'>
              <image src='../../images/photos/纪念品.jpg' class='hotel-image'/>
            </view>

            <view class='content'>
              <view class='date'>
                <text>纪念品</text>
              </view>

              <view class='introduce'>
                <text class='name'>{{item.name}}</text>
              </view>
            </view>
          </view>
          </block>
        </scroll-view>
      </view>
    </block>

    <view class='demand'>
      <view class='demand-title' style='width:32%'>
        <text>航拍需求</text>
      </view>
      <text class='demand-content' style='margin-left:30%'>不需要</text>
    </view> 

    <view class='demand'>
      <view class='demand-title' style='width:40%'>
        <text>集体定制服装需求</text>
      </view>
      <text class='demand-content' style='margin-left:22%'>需要</text>
    </view>

    <button>加入活动</button>

  </scroll-view>

</view>