/* pages/searchRestaurant/searchRestaurant.wxss */
.search{
    width: 100%;
    height: 45px;
}
.border{
    width: 80%;
    height: 31px;
    margin: 10px auto;
    border: 2px solid #09b2f0;
    border-radius: 20px;
}
.searchBar{
    width: 75%;
    height: 31px;
    margin: 0 0 0 10%;
    float: left;
}
.icon-search{
    width: 31px;
    height: 31px;
}
.searchItems{
    width: 90%;
    height: 70px;
    margin: 10px auto;
    border-radius: 15px;
}
.restaurantItems{
    width: 30%;
    height: 70px;
    float: left;
    border-radius: 15px 0 0 15px;
    background-color: #09b2f0;
}
.details{
    width: 60%;
    height: 50px;
    float: right;
    margin: 10px 5%;
}
.title{
    font-size: 1em;
}
.address{
    font-size: 0.8em;
    color: #9e9e9e;
}
.icon-restaurant{
    width: 50px;
    height: 50px;
    margin: 10px 25px;
}
.container{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0;
}