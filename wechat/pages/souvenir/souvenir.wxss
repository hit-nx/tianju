/* pages/souvenir/souvenir.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0;
}
.souvenir{
    height: 150px;
    margin: 10px 0;
    overflow: hidden;
    position: relative;
}
.souvenirImage{
    width: 100%;
    height:120px;
    border-radius: 15px 15px 0 0;
}
.name{
    width: 90%;
    height: 30px;
    float: left;
    background-color: #7ad5f7;
    border-radius: 0 0 0 15px;
    position: absolute;
    top: 120px;
}
.delete{
    width: 10%;
    height: 30px;
    background-color: #f35a5a;
    position: absolute;
    top: 120px;
    right: 0;
    border-radius: 0 0 15px 0;
}
.deleteImg{
    width: 25px;
    height: 25px;
    margin: 2px;
}
.add{
    height: 70px;
    width: 70px;
    margin: 5px auto;
}
.addImg{
    height: 70px;
    width: 70px;
}