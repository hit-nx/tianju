<!--pages/souvenir/souvenir.wxml-->
<view style='width:90%;margin:0 auto;'>

  <view style='height:15rpx;'></view>

  <block wx:for='{{array}}'>
  <view class='souvenir'>
  
    <image class='souvenirImage' src='../../images/photos/souvenir.jpg'></image>
            
    <view class='name'>
      <text style='color:#fff;padding:0 10px;font-size:27rpx;'>{{item.name}}</text>
    </view>

    <view class='delete' id='{{index}}' bindtap='Delete'>
      <image class='deleteImg' src='../../images/icon-png/删除-垃圾桶.png'></image>
    </view>
  
  </view>
  </block>
        
  <view class='add' bindtap='add'>
    <image class='addImg' src='../../images/icon-png/添加.png'></image>
  </view>

</view>