page{
  width: 100%;
  height: 100%;
  background-color: #e3e0e0;
}

.container{
  width: 100%;
  height: 100%;
}

.search{
  width: 100%;
  height: 8%;
  background-color: #fff;
  margin-top: 4%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.search view{
  width: 80%;
  height: 50%;
  border-radius: 30rpx;
  border: 5rpx solid #09b2f0;

  display: flex;
  align-items: center;
  justify-content: space-around;
}

.search view input{
  font-size: 30rpx;
  color: #303030;
}

.place{
  font-size: 30rpx;
}

.scroll{
  height: 90%;
  width: 100%;
    /* display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center; */
}

.item{
  height: 10%;
  width: 90%;
  background-color: #ffffff;
  margin-top: 3%;
  margin-left: 5%;
  border-radius: 20rpx;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.photo{
  width: 30%;
  height: 100%;
  background-color: #7ad5f7;
  border-radius: 20rpx 0rpx 0rpx 20rpx;
}

.photo image{
  width: 30%;
  height: 50%;
  margin-left: 35%;
  margin-top: 12%;
}

.content{
  width: 45%;
  height: 70%;
  margin-left: 6%;

  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.choose{
  width: 19%;
  height: 100%;
  background-color: #09b2f0;
  border-radius: 0 20rpx 20rpx 0;

  display: flex;
  justify-content: center;
  align-items: center;
}

.choose image{
  width: 50%;
  height: 60%;
}