page{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0
}

.container{
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.scroll{
  height: 100%;
  width: 100%;

}

.photo{
  height: 25%;
  width: 200%;

  display: flex
}

.photo image{
  height: 100%;
  width: 100%;
}

.display{
  margin-top: 4%;
  height: 7%;
  width: 100%;
  background-color: #ffffff;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  width: 32%;
  border-radius: 20px;
  height: 70%;
  background-color: #7ad5f7;
  margin: 3%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.title text{
  color: #ffffff;
  font-size: 10px;
}

.content{
  color: #959595;
  font-size: 10px;
  margin-left: 15%
}

.location{
  width: 95%;
  height: 35%;
  border-radius: 20rpx;

  margin-top: 4%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.location image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  margin-left: 5%;
}

.pulldown{
  height: 100%;
  width: 12%;
  background-color: #09b2f0;
  margin-left: 50%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.pulldown image{
  height: 50%;
  width: 50%
}

.pulldisplay{
  width: 90%;
  height: 20%;
  background-color: #ffffff;
  margin-left: 5%;
  margin-top: 4%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}

.pulldisplay view{
  width: 90%;
  height: 90%;

  margin-left: 5%;
}

.pulldisplay view text{
  color: #959595;
  font-size: 10px;
}

.btn{
  width: 80%;
  height: 7%;
  background-color: #09b2f0;
  color: #ffffff;
  font-size: 12px;

  margin-top: 4%;
}