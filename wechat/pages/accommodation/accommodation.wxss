page{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0
}

.container{
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start
}

.photo{
  height: 25%;
  width: 100%;

  display: flex
}

.photo image{
  height: 100%;
  width: 100%;
}

.display{
  margin-top: 4%;
  height: 7%;
  width: 100%;
  background-color: #ffffff;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  width: 32%;
  border-radius: 20px;
  height: 70%;
  background-color: #7ad5f7;
  margin: 3%;

  display: flex;
  justify-content: center;
  align-items: center;
}

.title text{
  color: #ffffff;
  font-size: 10px;
}

.content{
  color: #959595;
  font-size: 10px;
  margin-left: 15%
}

.location{
  width: 90%;
  height: 35%;
  border-radius: 20rpx;

  margin-top: 4%;
  display: flex;
}

.location image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}