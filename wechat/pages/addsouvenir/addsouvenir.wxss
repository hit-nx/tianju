/* pages/addsouvenir/addsouvenir.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0;
}
.souvenir{
    height: 300rpx;
    margin: 20rpx 0;
    overflow: hidden;
    position: relative;
}
.souvenirImage{
    width: 100%;
    height:240rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.name{
    width: 90%;
    height: 60rpx;
    float: left;
    background-color: #7ad5f7;
    border-radius: 0 0 0 20rpx;
    position: absolute;
    top: 240rpx;
}
.add{
    width: 10%;
    height: 60rpx;
    position: absolute;
    top: 240rpx;
    right: 0;
    border-radius: 0 0 20rpx 0;
    background-color: #fff;
}
.addImg{
    width: 60%;
    height: 70%;
    margin: 10% 20%;
}
