page{
  height: 100%;
  width: 100%;
  background-color: #E3E0E0;
}
.container{
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 31rpx;
}
.header{
  height: 25%;
  width: 100%;
  background-color: #09B2F0;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 24%;
  padding-top: 12%;
}
.image{
  border: 5rpx solid #fff;
  height: 200rpx;
  width: 200rpx;
  border-radius:100%; 
  overflow:hidden;
}
.wx{
  font-size: 35rpx;
  color: #fff;
  width: 300rpx;
  height: 250rpx;
  line-height: 250rpx;
  padding-left: 70rpx;
}
.model{
  width: 100%;
  height: 8%;
  background-color: #fff; 
  margin-top: 5%;

  display: flex;
  align-items: center;
}
.text{
  height: 100%;
  width: 30%;
  color: #303030;
  font-size: 30rpx;

  margin-left: 10%;
  margin-top: 6%;
}
.text_{
  height: 100%;
  width: 30%;
  text-align: right;
  font-size: 30rpx;
  margin-left: 18%;
  margin-top: 6%;
  color: #959595;
}

.input{
  height: 100%;
  width: 60%;
  font-size: 30rpx;
  color: #959595;
}

.edit{
  margin-top: 6%;
  background-color: #09B2F0;
  color: #fff;
  width: 80%;
  height: 8%;
  font-size: 30rpx;
}