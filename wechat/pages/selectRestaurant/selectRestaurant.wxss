/* pages/selectRestaurant/selectRestaurant.wxss */
.date{
    width: 35%;
    height: 25px;
    background-color: #09b2f0;
    border-radius: 15px;
    padding: 5px;
    margin: 7px 0;
}
.dateItems{
    line-height: 25px;
    margin: 0 auto;
    padding: 0 5px;
}
.restaurant{
    width: 70%;
    height: 90px;
    margin: 7px 0;
    float: right;
}
.lunchImg{
    width: 30%;
    height: 90px;
    float: left;
    border-radius: 15px 0 0 15px;
    margin: 7px 0;
    background-color: #82d8f7;
}
.meal{
    width: 85%;
    height: 30px;
    float: left;
    background-color: #09b2f0;
}
.delete{
    width: 15%;
    height: 30px;
    float: right;
    background-color: #f35a5a;
    border-radius: 0 15px 0 0;
}
.trashCan{
    width: 25px;
    height: 25px;
    margin: 2px;
}
.details{
    border-radius: 0 0 15px 0;
    background-color: #fff;
}
.title{
    font-size: 1.2em;
    padding: 30px 5px;
}
.address{
    font-size: 0.9em;
    color: #9e9e9e;
    padding: 20px 5px;
}
.save{
    width: 90%;
    margin: 5px 5%;
    background-color: #09b2f0;
    color: #fff;
}
.container{
  height: 100%;
  width: 100%;
  background-color: #e3e0e0;
}