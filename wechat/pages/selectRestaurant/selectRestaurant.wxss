/* pages/selectRestaurant/selectRestaurant.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #e3e0e0;
}
.date{
    width: 35%;
    height: 20px;
    background-color: #7ad5f7;
    border-radius: 15px;
    padding: 5px;
    justify-content: center;
    text-align: center;
}
.dateItems{
    line-height: 20px;
    text-align: center;
    color: #fff;
    font-size: 0.8em;
}
.restaurant{
    width: 70%;
    height: 90px;
    margin: 7px 0;
    float: right;
}
.lunchImg{
    width: 30%;
    height: 90px;
    float: left;
    border-radius: 15px 0 0 15px;
    margin: 7px 0;
    background-color: #82d8f7;
}
.meal{
    width: 85%;
    height: 30px;
    float: left;
    background-color: #09b2f0;
}
.delete{
    width: 15%;
    height: 30px;
    float: right;
    background-color: #f35a5a;
    border-radius: 0 15px 0 0;
}
.trashCan{
    width: 25px;
    height: 25px;
    margin: 2px;
}
.details{
    border-radius: 0 15px 15px 0;
    background-color: #fff;
    height: 90px;
}
.title{
    font-size: 0.9em;
    padding: 50px 5px 0 5px;
}
.address{
    font-size: 0.7em;
    color: #9e9e9e;
    padding: 50px 5px 0 5px;
}
.save{
    width: 90%;
    margin: 5px 5%;
    background-color: #09b2f0;
    color: #fff;
}