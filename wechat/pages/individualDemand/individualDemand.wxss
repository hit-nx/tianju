page{
  height: 100%;
}

.container{
  height: 100%;
  width: 100%;

  background-color: #e3e0e0;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: left;
  justify-content: flex-start
}

.title{
  width: 32%;
  border-radius: 20px;
  height: 5%;
  background-color: #09b2f0;
  margin: 3%;

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.title text{
  color: #ffffff;
  font-size: 10px;
  margin-top: 6%;
}

.display{
  height: 7%;
  width: 100%;
  margin-bottom: 6%;
  background-color: #ffffff;

  display: flex;
  flex-direction: row;
  justify-content: center
}

.switch-need{
  height: 50%;
  width: 30%;
  border: 2px solid #09b2f0;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  margin-top: 2%;

  display: flex;
  flex-direction: row;
  justify-content: center
}

.switch-need text{
  font-size: 10px;
  margin-top: 1%;
}

.switch-ineed{
  height: 50%;
  width: 30%;
  border: 2px solid #09b2f0;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  margin-top: 2%;

  display: flex;
  flex-direction: row;
  justify-content: center
}

.switch-ineed text{
  font-size: 10px;  
  margin-top: 1% 
}